<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ToDo MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="topnav-bar">
        <div class="container clearfix">
            <div class="float-left">
                <ul class="nav">
                    <li class='nav-item'><a class='nav-link navbar-brand @(ViewBag.SelectedMenu == "ToDo MVC" ? "active" : "")' asp-area="" asp-controller="Home" asp-action="Index">ToDo MVC</a></li>
                    <li class='nav-item'><a class='nav-link @(ViewBag.SelectedMenu == "Home Page" ? "active" : "")' asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class='nav-item'><a class='nav-link @(ViewBag.SelectedMenu == "Privacy Policy" ? "active" : "")' asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-primary p-0">
        <div class="container">
            &copy; 2021 - ToDo MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
