@page "/userlicenses";

@if (Licenses == null)
{
    <p style="text-align:center">
        <img src="../images/loader.gif" />
    </p>
}
else
{
    <div class="card shadow mt-2 mb-2">
        <div class="card-header">
            <h1 class="PageTitle">User Licenses</h1>
        </div>
        <div class="card-body">
            <div>
                <a href="/addbook" class="float">
                    <span class="oi oi-plus float-margintop" aria-hidden="true"></span>
                </a>
            </div>
            <table class="table table-striped table-bordered table-hover shadow" aria-labelledby="tableLabel">
                <thead class="table-header-dark">
                    <tr>
                        <th>Id</th>
                        <th>User Id</th>
                        <th>License</th>
                        <th>Used For</th>
                        <th>Created On</th>
                        <th>Is Active</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var license in Licenses)
                    {
                        <tr>
                            <td>@license.Id</td>
                            <td>@license.UserId</td>
                            <td>@license.License</td>
                            <td>@license.LicenseUsedFor</td>
                            <td>@license.CreatedOn</td>
                            <td>
                                @if (@license.IsActive)
                                {
                                    <span class="oi oi-thumb-up span-styles"></span>
                                }
                                else
                                {
                                    <span class="oi oi-thumb-down span-styles"></span>
                                }

                            </td>
                            <td>
                                <a href="editbook/@license.Id" class="td-a-edit">
                                    <span class="oi oi-pencil icon span-styles" aria-hidden="true"></span>
                                </a>
                            </td>
                            <td>
                                <a href="deletebook/@license.Id" class="td-a-delete">
                                    <span class="oi oi-trash icon span-styles" aria-hidden="true"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
